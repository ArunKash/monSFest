<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="monSFest.Pages.ContactDetailPage" Title ="Contact Details">
	<ContentPage.Content>

        <StackLayout >
   <!--Top-->
  <StackLayout Orientation="Horizontal" VerticalOptions="Start">
    <!-- top controls -->
  </StackLayout>
  <!-- Middle-->
        <StackLayout VerticalOptions="CenterAndExpand" Spacing = "40" >
            
        <Label Text="{Binding user.name}" FontSize="Medium" HorizontalTextAlignment="Center" />
            
        <Label Text="{Binding user.capability}" FontSize="Small" HorizontalTextAlignment="Center" />

        <Label Text="{Binding user.mobileNumber}" FontSize="Medium"  HorizontalTextAlignment="Center"/>

        <Label Text="{Binding user.email}" FontSize="Medium" HorizontalTextAlignment="Center" />

       </StackLayout>
        
        <StackLayout >
        <Button VerticalOptions = "End" Text="Mail" TextColor="White" BackgroundColor = "Blue" Clicked ="mailUser"/>
        <Button VerticalOptions="End" Text="Call" TextColor="White" BackgroundColor="Green" Clicked="CallButtonPressed"/>
        </StackLayout>

    </StackLayout>

        
	</ContentPage.Content>
</ContentPage>
